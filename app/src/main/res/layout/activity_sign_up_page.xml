<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground"
    android:orientation="vertical"
    tools:context=".SignUpPage">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:backgroundTint="?attr/colorBackground"
      android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackground"
        android:backgroundTint="?attr/colorBackground">

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.05" />

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.95" />

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/guideline7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:layout_constraintGuide_percent="0.05" />

      <TextView
          android:id="@+id/textView12"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_semibold"
          android:gravity="center"
          android:text="Sign Up"
          android:textColor="?attr/textColorPrimary"
          android:textSize="48sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toTopOf="@+id/guideline7" />

      <TextView
          android:id="@+id/textView13"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="44dp"
          android:text="First Name"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView12" />

      <EditText
          android:id="@+id/etFName"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:fontFamily="@font/poppins"
          android:hint="Enter First Name"
          android:inputType="text"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView13" />

      <TextView
          android:id="@+id/textView14"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/poppins"
          android:text="Middle Name"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etFName" />

      <EditText
          android:id="@+id/etMName"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:fontFamily="@font/poppins"
          android:hint="Enter Middle Name"
          android:inputType="text"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView14" />

      <TextView
          android:id="@+id/textView15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/poppins"
          android:text="Last Name"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etMName" />

      <EditText
          android:id="@+id/etLName"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:fontFamily="@font/poppins"
          android:hint="Enter Last Name"
          android:inputType="text"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView15" />

      <TextView
          android:id="@+id/textView16"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/poppins"
          android:text="Birthdate"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etLName" />

      <EditText
          android:id="@+id/etBdate"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:layout_marginEnd="60dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:fontFamily="@font/poppins"
          android:hint="MM/DD/YYYY"
          android:inputType="date"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView16" />

      <TextView
          android:id="@+id/textView17"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/poppins"
          android:text="Barangay"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etBdate" />

      <EditText
          android:id="@+id/etBarangay"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:fontFamily="@font/poppins"
          android:hint="Enter Barangay"
          android:inputType="text"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView17" />

      <TextView
          android:id="@+id/textView18"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/poppins"
          android:text="City"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etBarangay" />

      <EditText
          android:id="@+id/etCity"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:fontFamily="@font/poppins"
          android:hint="Enter City"
          android:inputType="text"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView18" />

      <TextView
          android:id="@+id/textView19"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/poppins"
          android:text="Province"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etCity" />

      <TextView
          android:id="@+id/textView20"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/poppins"
          android:text="Email"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etProvince" />

      <EditText
          android:id="@+id/etEmail"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:fontFamily="@font/poppins"
          android:hint="Enter Email"
          android:inputType="text|textEmailAddress"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView20" />

      <TextView
          android:id="@+id/textView21"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/poppins"
          android:text="Password"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etEmail" />

      <EditText
          android:id="@+id/etPassword"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:fontFamily="@font/poppins"
          android:hint="Enter Password"
          android:inputType="text|textPassword"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView21" />

      <TextView
          android:id="@+id/textView22"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/poppins"
          android:text="Confirm Password"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etPassword" />

      <EditText
          android:id="@+id/etCPassword"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:fontFamily="@font/poppins"
          android:hint="Enter Confirm Password"
          android:inputType="textPassword"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView22" />

      <Button
          android:id="@+id/btnSignUp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="50dp"
          android:layout_marginTop="24dp"
          android:layout_marginEnd="50dp"
          android:background="@drawable/button"
          android:backgroundTint="?attr/colorPrimary"
          android:fontFamily="@font/poppins_medium"
          android:text="Sign Up"
          android:textAllCaps="false"
          android:textColor="?attr/colorOnPrimary"
          android:textSize="16sp"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etCPassword" />

      <TextView
          android:id="@+id/textView23"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="24dp"
          android:fontFamily="@font/poppins"
          android:text="Already have an account?"
          android:textColor="?attr/textColorPrimary"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintHorizontal_bias="0.32"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/btnSignUp" />

      <TextView
          android:id="@+id/tvSignIn"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="4dp"
          android:fontFamily="@font/poppins"
          android:text="Sign In"
          android:textColor="?attr/colorAccent"
          android:textSize="16sp"
          app:layout_constraintStart_toEndOf="@+id/textView23"
          app:layout_constraintTop_toTopOf="@+id/textView23" />

      <ImageButton
          android:id="@+id/imgBtnCalendar"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_marginStart="4dp"
          android:backgroundTint="#00FFFFFF"
          android:scaleType="centerInside"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toEndOf="@+id/etBdate"
          app:layout_constraintTop_toTopOf="@+id/etBdate"
          app:srcCompat="@drawable/calendar" />

      <ProgressBar
          android:id="@+id/pbSignUp"
          style="?android:attr/progressBarStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:progressTint="?attr/colorPrimary"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/etCPassword" />

      <EditText
          android:id="@+id/etProvince"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/text_field"
          android:ems="10"
          android:hint="Enter Province"
          android:inputType="text"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:textColor="#212529"
          android:textColorHint="?attr/textColorHint"
          app:layout_constraintEnd_toStartOf="@+id/guideline2"
          app:layout_constraintStart_toStartOf="@+id/guideline"
          app:layout_constraintTop_toBottomOf="@+id/textView19" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</LinearLayout>